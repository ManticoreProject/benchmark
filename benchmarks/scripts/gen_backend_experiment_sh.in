NAME=$1
if [ "$NAME" == "" ]; then
    echo "error: provide the name of the benchmark as first argument"
    exit
fi
INPUT=$2

# DESCRIPTION="BACKEND TEST"
NUM_TRIALS=10
SCRIPT_FILE="backend-test.sh"

MANTI_BENCH_ROOT=@MANTI_BENCH_ROOT@

rm -rf $SCRIPT_FILE
touch $SCRIPT_FILE

(
cat <<EOF
#!/bin/bash

BACKEND="" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "mlrisc" -t $NUM_TRIALS -s "$INPUT"

BACKEND="-llopt0" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 0" -t $NUM_TRIALS -s "$INPUT"


BACKEND="-llopt1" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 1" -t $NUM_TRIALS -s "$INPUT"

BACKEND="-llopt2" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 2" -t $NUM_TRIALS -s "$INPUT"

BACKEND="-llopt3" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 3" -t $NUM_TRIALS -s "$INPUT"

BACKEND="-llopt4" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 4" -t $NUM_TRIALS -s "$INPUT"

BACKEND="-llopt5" @MANTI_BENCH_ROOT@/scripts/gen-makefile.sh 
make clean
make mc-seq
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "llvm 5" -t $NUM_TRIALS -s "$INPUT"


EOF
) >> $SCRIPT_FILE

chmod +x $SCRIPT_FILE
