#
# Argument is benchmark name.
#

NAME=$1
if [ "$NAME" == "" ]; then
    echo "error: provide the name of the benchmark as first argument"
    exit
fi
INPUT=$2

DESCRIPTION="BACKEND TEST"
NUM_TRIALS=10
SCRIPT_FILE="backend-test.sh"

MANTI_BENCH_ROOT=@MANTI_BENCH_ROOT@

rm -rf $SCRIPT_FILE
touch $SCRIPT_FILE

(
cat <<EOF
#!/bin/bash
$MANTI_BENCH_ROOT/scripts/experiment.sh -f mc-seq -e -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS -s "$INPUT"
EOF
) >> $SCRIPT_FILE

chmod +x $SCRIPT_FILE
