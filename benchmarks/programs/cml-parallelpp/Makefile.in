# Makefile for parallel ping-pong benchmarks
#
# @configure_input@
#

SHELL =		/bin/sh

SMLNJ =		@SMLNJ_CMD@
MLTON =		@MLTON@
PMLC =		@PMLC@

TARGET =	parallel-pp

all:		$(TARGET)-smlnj $(TARGET)-mc1 $(TARGET)-mc2

$(TARGET)-smlnj:	sources.cm parallel-pp.sml
	echo "SMLofNJ.exportFn(\"parallel-pp-smlnj\", Main.main);" | $(SMLNJ) sources.cm

$(TARGET)-mc1:	parallel-pp1.pml
	$(PMLC) -o $(TARGET)-mc1 parallel-pp1.pml

$(TARGET)-mc2:	parallel-pp2.pml
	$(PMLC) -o $(TARGET)-mc2 parallel-pp2.pml
