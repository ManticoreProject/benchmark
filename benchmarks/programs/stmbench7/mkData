
if [ "$#" -ne 2 ]; then
    echo "usage: ./mkData <# operations> <threads>"
    exit
fi

n=$1

threads=$2

echo -n "" > data/data.txt

ops=30

for (( t=1; t<=$threads; t++ ))
do
    for (( c=1; c<=$n; c++ ))
    do
       x=$(( RANDOM % $ops ))

       if [ $c -eq $n ]; then 
            echo "$x" >> data/data.txt
       else
            echo -n "$x " >> data/data.txt
       fi
    done
done

