# Makefile for plus-reduce benchmarks
#
# @configure_input@
#

SHELL =		/bin/sh

SMLNJ =		@SMLNJ_CMD@
MLTON =		@MLTON@
PMLC =		@PMLC@
PMLCFLAGS =	@PMLCFLAGS@

TARGET =	plus-reduce

all:		$(TARGET)-par $(TARGET)-seq-elison $(TARGET)-smlnj $(TARGET)-mlton

$(TARGET)-par:	plus-reduce.mlb plus-reduce.pml
	$(PMLC) $(PMLCFLAGS) -o $(TARGET)-par plus-reduce.mlb

$(TARGET)-seq-elison:	plus-reduce.mlb plus-reduce.pml
	$(PMLC) $(PMLCFLAGS) -Csequential=true -o $(TARGET)-seq-elison plus-reduce.mlb

$(TARGET)-smlnj:	plus-reduce.cm plus-reduce.sml
	echo "SMLofNJ.exportFn(\"plus-reduce-smlnj\", Main.main);" | $(SMLNJ) plus-reduce.cm

$(TARGET)-mlton:	plus-reduce-mlton.mlb plus-reduce.sml
	$(MLTON) -output $(TARGET)-mlton plus-reduce-mlton.mlb

.PHONY: clean
clean:
	rm -rf $(TARGET)-par $(TARGET)-seq-elison $(TARGET)-mlton *.s .cm *.x86-linux
