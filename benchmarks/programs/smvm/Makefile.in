# Makefile for sparse-matrix-vector product
#
# @configure_input@
#

SHELL =		/bin/sh

SMLNJ =		@SMLNJ_CMD@
MLTON =		@MLTON@
PMLC =		@PMLC@
PMLCFLAGS=@PMLCFLAGS@

TARGET =	smvm

all:		$(TARGET)-par $(TARGET)-seq-elison $(TARGET)-smlnj $(TARGET)-mlton

$(TARGET)-par:	smvm.mlb smvm.pml
	$(PMLC) $(PMLCFLAGS) -o $(TARGET)-par smvm.mlb

$(TARGET)-seq-elison:	smvm.mlb smvm.pml
	$(PMLC) $(PMLCFLAGS) -Csequential=true -o $(TARGET)-seq-elison smvm.mlb

$(TARGET)-smlnj:	smvm.cm smvm.sml
	echo "SMLofNJ.exportFn(\"smvm-smlnj\", Main.main);" | $(SMLNJ) smvm.cm

$(TARGET)-mlton:	smvm-mlton.mlb smvm.sml
	$(MLTON) -output $(TARGET)-mlton smvm-mlton.mlb

.PHONY: clean
clean:
	rm -rf $(TARGET)-par $(TARGET)-seq-elison *.s $(TARGET)-mlton .cm *.x86-linux
