# Makefile for minimax benchmarks
#
# @configure_input@
#

SHELL =		/bin/sh

SMLNJ =		@SMLNJ_CMD@
MLTON =		@MLTON@
PMLC =		@PMLC@
PMLCFLAGS=@PMLCFLAGS@

TARGET =	ttt

all:		$(TARGET)-par $(TARGET)-seq $(TARGET)-seq-elison  $(TARGET)-smlnj $(TARGET)-mlton

$(TARGET)-par:	ttt-par.mlb ttt-par.pml
	$(PMLC) $(PMLCFLAGS) -o $(TARGET)-par ttt-par.mlb

$(TARGET)-seq-elison:	ttt-par.mlb ttt-par.pml
	$(PMLC) $(PMLCFLAGS) -Csequential=true -o $(TARGET)-seq-elison ttt-par.mlb

$(TARGET)-seq:	ttt-seq.mlb ttt-seq.pml
	$(PMLC) $(PMLCFLAGS) -Csequential=true -o $(TARGET)-seq ttt-seq.mlb

$(TARGET)-smlnj:	ttt.cm ttt.sml
	echo "SMLofNJ.exportFn(\"ttt-smlnj\", Main.main);" | $(SMLNJ) ttt.cm

$(TARGET)-mlton:	ttt-mlton.mlb ttt.sml
	$(MLTON) -output $(TARGET)-mlton ttt-mlton.mlb

.PHONY: clean
clean:
	rm -f $(TARGET)-par $(TARGET)-seq $(TARGET)-seq-elison $(TARGET)-mlton *.s
