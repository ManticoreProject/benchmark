#!/bin/bash

NAME="pquickhull"
DESCRIPTION="parallel quick hull algorithm"

## Parameters provided by the configure script

# number of times to test each data point; for statistical validity
NUM_TRIALS="@NUM_TRIALS@"
MANTI_BENCH_ROOT=@MANTI_BENCH_ROOT@
# generate different processor configurations used by the experiment
# e.g., -p 1 -p 2 ... -p num_procs
PROCS_LIST=""
for i in {1..@NUM_PROCS@}; do
    PROCS_LIST="$PROCS_LIST -p $i"
done

LOG_WORK_STEALING="@LOG_WORK_STEALING@"

if [ "$LOG_WORK_STEALING" != "" ]; then
    PROCS_LIST=""
    for i in {2..@NUM_PROCS@}; do
	PROCS_LIST="$PROCS_LIST -p $i"
    done
    $MANTI_BENCH_ROOT/scripts/work-stealing-stats.sh $PROCS_LIST -f pquickhull-par -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS
    exit 0
fi

# parallel 
$MANTI_BENCH_ROOT/scripts/experiment.sh $PROCS_LIST -f pquickhull-par -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS

# sequential elison 
$MANTI_BENCH_ROOT/scripts/experiment.sh -e -f pquickhull-seq-elison -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS 

# smlnj
$MANTI_BENCH_ROOT/scripts/experiment-smlnj.sh -f quickhull-smlnj -n "$NAME" -d "$DESCRIPTION" -t $NUM_TRIALS

# mlton
$MANTI_BENCH_ROOT/scripts/experiment-mlton.sh -f quickhull-mlton -n "$NAME" -d "$DESCRIPTION" -t $NUM_TRIALS
