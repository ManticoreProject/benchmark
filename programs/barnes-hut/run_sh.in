#!/bin/bash

NAME="barnes-hut"
DESCRIPTION="purely-functional barnes hut n-body simulation (over plummer dist)"

## Parameters provided by the configure script

# number of times to test each data point; for statistical validity
NUM_TRIALS="@NUM_TRIALS@"
MANTI_BENCH_ROOT=@MANTI_BENCH_ROOT@
# generate different processor configurations used by the experiment
# e.g., -p 1 -p 2 ... -p num_procs
PROCS_LIST=""
for i in {1..@NUM_PROCS@}; do
    PROCS_LIST="$PROCS_LIST -p $i"
done

# parallel 
$MANTI_BENCH_ROOT/scripts/experiment.sh $PROCS_LIST -f barnes-hut-par -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS

# sequential elison 
$MANTI_BENCH_ROOT/scripts/experiment.sh -e -f barnes-hut-seq-elison -n $NAME -d "$DESCRIPTION" -t $NUM_TRIALS 

# sequential
$MANTI_BENCH_ROOT/scripts/experiment.sh -e -f barnes-hut-seq -n "$NAME-seq" -d "$DESCRIPTION -- sequential version" -t $NUM_TRIALS 

# smlnj
$SML @SMLload=barnes-hut